{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverName": {
      "defaultValue": "heddassis",
      "type": "string"
    },
    "factoryName": {
      "type": "string",
      "defaultValue": "heddaioadf"
    },
    "catalogAdminUserName": {
      "type": "string",
      "defaultValue": "heddaio"
    },
    "catalogAdminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]",
    "blobUrl": "https://oh22issoftware.blob.core.windows.net/heddaiossis",
    "sasToken": "?st=2018-11-01T00%3A00%3A00Z&se=2020-11-30T00%3A00%3A00Z&sp=rl&sv=2018-03-28&sr=c&sig=AoThOzN1ZLAXVodFSIOO9F%2FarX%2BX0E3UEiUQFLek35s%3D",
    "catalogServerEndpoint": "[concat(parameters('serverName'), '.database.windows.net')]"
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "kind": "v12.0",
      "name": "[parameters('serverName')]",
      "apiVersion": "2018-06-01-preview",
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {
        "administratorLogin": "heddaio",
        "version": "12.0"
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.Sql/servers/firewallRules",
      "name": "[concat(parameters('serverName'), '/', 'firewallRules_AllowAllWindowsAzureIps_name')]",
      "apiVersion": "2018-06-01-preview",
      "scale": null,
      "properties": {
        "startIpAddress": "0.0.0.0",
        "endIpAddress": "0.0.0.0"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ]
    },
    {
      "name": "[parameters('factoryName')]",
      "apiVersion": "2018-06-01-preview",
      "type": "Microsoft.DataFactory/factories",
      "location": "[resourceGroup().location]",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]"
      ]
    },
    {
      "type": "Microsoft.DataFactory/factories/integrationRuntimes",
      "name": "[concat(parameters('factoryName'), '/integrationRuntime')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-06-01-preview",
      "properties": {
        "type": "Managed",
        "typeProperties": {
          "computeProperties": {
            "location": "[resourceGroup().location]",
            "nodeSize": "Standard_D4_v2",
            "numberOfNodes": 1,
            "maxParallelExecutionsPerNode": 1
          },
          "ssisProperties": {
            "catalogInfo": {
              "catalogServerEndpoint": "[variables('catalogServerEndpoint')]",
              "catalogAdminUserName": "[parameters('catalogAdminUserName')]",
              "catalogAdminPassword": {
                "type": "SecureString",
                "value": "[parameters('catalogAdminPassword')]"
              },
              "catalogPricingTier": "Basic"
            },
            "customSetupScriptProperties": {
              "blobContainerUri": "[variables('blobUrl')]",
              "sasToken": {
                "type": "string",
                "value": "[variables('sasToken')]"
              }
            },
            "edition": "Standard",
            "licenseType": "LicenseIncluded"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', parameters('serverName'))]",
        "[resourceId('Microsoft.DataFactory/factories', parameters('factoryName'))]"
      ]
    }
  ]
}
